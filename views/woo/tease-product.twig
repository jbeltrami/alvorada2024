{% block content %}
	<div
		class="col-lg-4 col-md-6 single-product mb-5">
		<a
			href="{{ post.link }}" class="card-effect">
			<div
				class="product-card">
				<img
					class="img-fluid w-100 d-block product-card__thumb"
					src="{{ post.thumbnail.src }}" alt="{{ post.thumbnail.alt }}"/>

				<div
					class="product-card__content">
					<h4
						class="product-card__title">
						{{ post.title }}
					</h4>

					<p
						class="product-card__price">
						R$
						{{ post._price }}
					</p>
				</div>
			</div>
		</a>
	</div>
{% endblock %}
