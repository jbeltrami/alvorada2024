{% extends "base.twig" %}

{% block content %}

	<section
		class="block-spacer mt-8">
		<div
			class="container-fluid">
			<div
				class="row">
				<div
					class="col-lg-12">
					<h1
						class="mb-5">
						Blog
					</h1>
				</div>
			</div>
			<div
				class="row">
				<div
					class="col-12">
					<div
						class="posts__grid">
						{% for post in posts %}
							{% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
						{% endfor %}
					</div>
				</div>
			</div>
			<div
				class="row">
				<div
					class="col-lg-12">
					{% include 'partial/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}
				</div>
			</div>
		</div>
	</section>


{% endblock %}
