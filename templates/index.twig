{% extends "base.twig" %}

{% block content %}
	{% include "/components/blog/blog-intro.twig" %}

	<div
		class="container">
		<div
			class="row">
			{% for post in posts %}
				<div
					class="col-lg-6">
					{% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
				</div>
			{% endfor %}
		</div>
	</div>

	{% include 'partial/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) }
%}
{% endblock %}
